<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>propcmd3</Title>
			<Shortcut>propcmd3</Shortcut>
			<Description>Code snippet for property and backing field and method of ICommand</Description>
			<Author>runerback</Author>
			<SnippetTypes>
				<SnippetType>Expansion</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
				<Literal>
					<ID>type</ID>
					<ToolTip>Property type</ToolTip>
					<Default>RelayCommand</Default>
				</Literal>
				<Literal>
					<ID>field</ID>
					<ToolTip>The variable backing this property</ToolTip>
					<Default>myVar</Default>
				</Literal>
				<Literal>
					<ID>property</ID>
					<ToolTip>Property name</ToolTip>
					<Default>MyProperty</Default>
				</Literal>
			</Declarations>
			<Code Language="csharp">
				<![CDATA[private $type$ $field$Command = null;
public $type$ $property$Command
{
	get { return this.$field$Command ?? (this.$field$Command = new RelayCommand($field$)); }
}

private void $field$(object obj)
{
	$end$
}
]]>
			</Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>